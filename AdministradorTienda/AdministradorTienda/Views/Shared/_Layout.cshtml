<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administrador de Boutique DX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdministradorTienda.styles.css" asp-append-version="true" />

    <style>
        html, body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to right, #d6c7a1, #e8dbb4, #fff6e0);
            overflow-x: hidden;
        }

        .main-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            position: relative;
            z-index: 0;
        }

        .navbar {
            background-color: #f8f9fa !important; 
        }

        .navbar-nav .nav-link, .navbar-brand {
            font-weight: bold;
        }

        .carousel-container {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            z-index: -1;
        }

        .carousel-item img {
            width: 100%;
            height: 100vh;
            object-fit: cover;
        }

        .gradient-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, #000000, #f5f5dc, #ffffff);
            opacity: 0.5;
            z-index: 1;
        }

        .logo-section {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 2;
            text-align: center;
        }

            .logo-section img {
                width: 250px;
                height: 250px;
                border-radius: 50%;
                object-fit: cover;
                background: #fff;
                border: 6px solid #fff;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
            }

            .logo-section p {
                margin-top: 15px;
                color: #fff;
                background: rgba(0, 0, 0, 0.5);
                padding: 8px 16px;
                border-radius: 10px;
                font-style: italic;
                font-size: 1.1rem;
                display: inline-block;
            }

        main {
            flex: 1;
            padding: 40px 20px;
            z-index: 3;
        }

        .content-wrapper {
            max-width: 90%;
            margin: auto;
            background: rgba(255, 255, 255, 0.75);
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
            backdrop-filter: blur(6px);
        }

        footer {
            background-color: rgba(0, 0, 0, 0.85);
            color: #ccc;
            text-align: center;
            font-size: 0.9rem;
            padding: 12px 0;
        }

            footer a {
                color: #ccc;
                text-decoration: none;
                margin-left: 6px;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="main-container">
      
        <header>
            <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-0">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Administrador de Boutique DX</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-center">
                        <ul class="navbar-nav text-center">
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Categorias">📂 Categorías</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Clientes">👥 Clientes</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="CuentaClientes">💳 CuentaClientes</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="DetallePedidos">🧾 DetallePedidos</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Pagos">💰 Pagos</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Pedidos">🛒 Pedidos</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Usuarios">🔐 Usuarios</a></li>
                        </ul>
                    </div>
                    <div class="d-flex ms-3">
                        <a class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Register">📝 Register</a>
                        <a class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Login">🔑 Login</a>
                    </div>
                </div>
            </nav>
        </header>

        
        @{
            var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLowerInvariant();
        }

        @if (currentAction == "index")
        {
           
            <div class="carousel-container">
                <div id="carouselBoutique" class="carousel slide carousel-fade w-100 h-100" data-bs-ride="carousel" data-bs-interval="3000">
                    <div class="carousel-inner">
                        <div class="carousel-item active"><img src="~/img/carrusel/1.png" alt="Imagen 1" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/2.png" alt="Imagen 2" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/3.png" alt="Imagen 3" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/4.png" alt="Imagen 4" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/5.png" alt="Imagen 5" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/6.png" alt="Imagen 6" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/7.png" alt="Imagen 7" /></div>
                    </div>
                </div>
                <div class="gradient-overlay"></div>
                <div class="logo-section">
                    <img src="~/img/logo-boutique.png" alt="Logo Boutique DX" />
                    <p><em>Uso exclusivo de administrador</em></p>
                </div>
            </div>
        }
        else
        {
            
            <div class="carousel-container">
                <div id="carouselBoutique" class="carousel slide carousel-fade w-100 h-100" data-bs-ride="carousel" data-bs-interval="3000">
                    <div class="carousel-inner">
                        <div class="carousel-item active"><img src="~/img/carrusel/1.png" alt="Imagen 1" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/2.png" alt="Imagen 2" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/3.png" alt="Imagen 3" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/4.png" alt="Imagen 4" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/5.png" alt="Imagen 5" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/6.png" alt="Imagen 6" /></div>
                        <div class="carousel-item"><img src="~/img/carrusel/7.png" alt="Imagen 7" /></div>
                    </div>
                </div>
                <div class="gradient-overlay"></div>
            </div>
        }

      
        <main class="flex-fill mt-4">
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </main>

       
        <footer>
            &copy; 2025 - AdministradorTienda -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
