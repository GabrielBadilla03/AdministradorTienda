@model AdministradorTienda.Models.Pedido

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que deseas eliminar este pedido?</h3>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @($"{Model.Cliente?.Nombre} {Model.Cliente?.Apellido}")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioGestor)
        </dt>
        <dd class="col-sm-10">
            @($"{Model.UsuarioGestor?.Nombre} {Model.UsuarioGestor?.Apellido}")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaPedido)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPedido" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </form>
</div>
