@model IEnumerable<AdministradorTienda.Models.ReportePagos>

@{
    ViewData["Title"] = "Reporte de Pagos por Cliente";
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="fas fa-file-invoice-dollar me-2"></i>@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Cliente</th>
                        <th>Total Pagado</th>
                        <th>Último Pago</th>
                        <th>Cantidad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NombreCliente</td>
                            <td class="fw-bold">@item.TotalPagado.ToString("C")</td>
                            <td>@item.UltimoPagoFecha.ToString("dd/MM/yyyy")</td>
                            <td><span class="badge bg-primary">@item.CantidadPagos</span></td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ClienteId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> Detalles
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>